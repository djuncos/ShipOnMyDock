<%= form_for @boat, url: boats_path, html: { multipart: true } do |f| %>





 

  <div class="field">
    <%= f.label :name, "Boat Name" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :avail_cont, "Available Containers" %>
    <%= f.text_field :avail_cont %>
  </div>

  <div class="field">
    <%= f.label :total_cont, "Total Containers" %>
    <%= f.text_field :total_cont %>
  </div>

 
    <%= f.label :image, "Boat Pic" %>
    <%= f.file_field :image %>
  

    <%= hidden_field_tag :id, @boat.id %>

  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
